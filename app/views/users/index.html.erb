<div class='row'>
  <div class="col-md-3">
    <%= render 'books/list', user: current_user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
  <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40 ,fallback: "noimage.jpeg"%></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td
          <td>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
            <% else %>
              <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
            <% end %>
          </td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>