<%= flash[:success] %>
<div class='row'>
  <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h3>Books</h3>
    <table class="">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "noimage.jpeg" %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td>フォロー数: <%= @user.followings.count %></td>
          <td>フォロワー数: <%= @user.followers.count %></td>
          <td>
            <% if current_user.following?(@user) %>
              <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>
            <% else %>
              <%= link_to "Follow", user_relationships_path(@user.id), method: :post %>
            <% end %>
          </td>
          <td><p>コメント数</p><%= book.book_comments.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>