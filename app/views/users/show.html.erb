<div class="col-md-3">
  <%= render 'books/list', user: @user, book: @book %>
</div>
<div class="col-md-8 offset-md-1">
  <% @user.books.each do |book| %>
    <div>
      <!--ここにプロフィール画像と名前（詳細へリンク）を表示 -->
  
      <p>Title：<%= link_to book.title, book_path(book.id) %></p>
      <p>Option：<%= book.body %></p>
  
    </div>
  <% end %>
</div>