<div class="container">
  <div class="col-xs-12">
<!--books一覧 -->
    <table class="table table-hover table-inverse">
      <% if @range == '2' %>
        <h2>Books search for "<%= @word %>"</h2>
        <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @book.each do |book| %>
          <tr>
            <td>
              <%= link_to(book.user) do %>
                <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "noimage.jpeg") %>
              <% end %>
            </td>
            <td>
             <%= link_to book.title, book, class: "book_#{book.id}" %> 
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>

      <% else %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <h2>Users search for "<%= @word %>"</h2>
          <% @user.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "noimage.jpeg") %></td>
              <td><%= user.name%></td>
              <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
           </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>