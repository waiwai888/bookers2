<%= flash[:success] %>
<div class='row'>
  <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @newbook %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "noimage.jpeg" %>
            <% end %>
            <br><%= link_to @user.name, user_path(@user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td></td>
          <div class="comments">
            <p>コメント件数：<%= @book.post_comments.count %></p>
            <% @book.post_comments.each do |post_comment| %>
              <%= post_comment.user.name %>
            <% end %>
          </div>
          <div class="new-comment">
            <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
              <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
              <%= f.submit "送信" %>
            <% end %>
          </div>


</div>
        </tr>
      </tbody>
    </table>
  </div>
</div>