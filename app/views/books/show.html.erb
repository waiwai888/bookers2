<div class="col-md-3">
  <%= render 'books/list', user: @user, book: @book %>
</div>
<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  
  <div class="book-body">
    
    <p>Title：<%= @book.title %></p>
    <p>Option：<%= @book.body %></p>
    
    <% if @book.user == current_user %>
      <%= link_to "削除", book_path(@book.id), method: :delete %>
    <% end %>
    
  </div>
</div>