<%= flash[:notice] %>
<div class='row'>
  <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @newbook %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100 ,fallback: "noimage.jpeg" %></td>
          <td><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", books_path, method: :delete %></td>
          <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>