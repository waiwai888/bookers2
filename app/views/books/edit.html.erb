  <%= form_with model:@book, , remote :true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <h4></h4>
    <h4></h4>
    <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" />
