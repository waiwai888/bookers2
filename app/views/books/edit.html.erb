<h1>Editing Book</h1>
<div class="notice">
  <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>
  <!-- form_with部分 -->
  <%= form_with model:@book, local: true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <h4></h4>
    <h4></h4>
    <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" />
    </div>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
