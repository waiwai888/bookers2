<h1>User info</h1>
    <div class="profile-container">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100 ,fallback: "noimage.jpeg" %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><h3 class="profile-name"><%= user.name %></h3></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><h3 class="profile-introduction"><%= user.introduction %></h3></th>
        </tr>
        <% if user.id == current_user.id %>
          <%= link_to "編集ボタン", edit_user_path(user) %>
        <% end %>
      </table>
    </div>

<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>