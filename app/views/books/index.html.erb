<div class="notice">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>
<div class='row'>
  <div class="col-md-3">
    <%= render 'books/list', user: current_user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100 ,fallback: "noimage.jpeg"%></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
