<div class="notice">
  <% if @newbook.errors.any? %>
    <%= @newbook.errors.count %>件のerrorが発生しました
    <% @newbook.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>
<div class='row'>
  <div class="col-md-3">
    <%= render 'books/list', user: current_user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
      <%= render 'index', books: @books %>
  </div>
</div>
