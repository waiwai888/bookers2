



<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <!--ここにプロフィール画像と名前（詳細へリンク）を表示 -->

    <p>Title：<%= link_to "Title", book_path(book.id) %></p>
    <p>Option：<%= book.body %></p>
  </div>
<% end %>